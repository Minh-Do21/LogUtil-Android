<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:orientation="vertical"
            android:layout_weight="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textTest"
                android:text="Xin chào!"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:text="Hãy đăng nhập để trải nghiệm cùng SpaceShare"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:gravity="right"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/default_avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Tài khoản"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtEmail"
                    android:paddingHorizontal="0dp"
                    app:backgroundTint="#ffbd30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18dp"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:drawableRight="@drawable/ic_baseline_close_24"
                    android:hint="Emai / Số điện thoại"/>


                <Button
                    android:id="@+id/btnClearTextEmail"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:backgroundTint="#00FFFFFF"
                    android:layout_gravity="right|center_vertical"
                    />
            </FrameLayout>
            <TextView
                android:id="@+id/tvValidationEmail"
                android:text="Validation Email"
                android:visibility="gone"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Mật khẩu"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtPassword"
                    android:paddingHorizontal="0dp"
                    app:backgroundTint="#ffbd30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18dp"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:inputType="textPassword"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:drawableRight="@drawable/ic_baseline_close_24"
                    android:hint="Mật khẩu đã đăng ký tài khoản"/>


                <Button
                    android:id="@+id/btnClearTextPassword"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:backgroundTint="#00FFFFFF"
                    android:layout_gravity="right|center_vertical"
                    />
            </FrameLayout>
            <TextView
                android:id="@+id/tvValidationPassWord"
                android:visibility="gone"
                android:text="Validation PassWord"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Quên mật khẩu?"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_below="@+id/myTextView"
                android:background="@color/black"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_marginTop="15dp"
            android:paddingVertical="10dp"
            android:text="Đăng nhập"
            android:textAllCaps="false"
            android:backgroundTint="#ffbd30"
            app:cornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:text="Hoặc đăng nhập bằng"
            android:textColor="#979696"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:showDividers="middle"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:divider="@drawable/empty_tall_divider"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:padding="10dp"
                android:background="@drawable/shape"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cornerRadius="50dp"
                android:gravity="center">

                <ImageView
                    android:src="@drawable/ic_fb"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:padding="10dp"
                android:background="@drawable/shape"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cornerRadius="50dp"
                android:gravity="center">

                <ImageView
                    android:src="@drawable/ic_gg"
                    android:layout_width="22dp"
                    android:layout_height="22dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:padding="10dp"
                android:background="@drawable/shape"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cornerRadius="50dp"
                android:gravity="center">

                <ImageView
                    android:src="@drawable/ic_apple"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Chưa có tài khoản?"

                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"/>



            <LinearLayout

                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text=" Đăng ký ngay"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="85dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/myTextView"
                    android:background="@color/black"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>